<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<%if @resp%>
  <ul>
    <%@github_search.each do |g|%>
      <li>
        <%=g["name"]%>
        <%=link_to g["html_url"], g["html_url"]%>
        <%=g["description"]%>
      </li>
    <%end%>
  </ul>
<%end%>
